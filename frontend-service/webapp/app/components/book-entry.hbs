{{!--
<form {{on "submit" (fn this.submit)}} ...attributes>
  <label>
    <span>Title:</span>
    <Input placeholder="Some book title" @type="text" @value={{@book.title}} />
    <button type="submit" class="" role="submit">Create</button>
  </label>

  {{yield}}
