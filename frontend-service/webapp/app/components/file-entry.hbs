<form {{on "submit" (fn this.submit)}} ...attributes>
  <label class="flex">
    <span class="flex-initial">File: </span>
    <Input class="w-full flex-auto pl-2" placeholder="Path to file" @type="file" @value={{file.path}} />
  </label>
  <div class="block mt-2">
    <button type="submit" class="rounded border border-grey-dark py-2 px-4 font-semibold text-grey-darker hover:text-red hover:border-red" role="submit">Upload</button>
  </div>
  
  {{yield}}
</form>
